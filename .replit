modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libarchive", "openssl", "postgresql", "unrar"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "gunicorn --bind 0.0.0.0:5000 app:app"]

[workflows]
runButton = "Start Ultra Performance"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Start application - Extended"
author = 46740217
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload --timeout 120 --worker-connections 1000 --max-requests 1000 --max-requests-jitter 100 app:app"

[[workflows.workflow]]
name = "Start application - Ultra Extended"
author = 47161528
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload --timeout 300 --worker-connections 1000 --max-requests 500 --max-requests-jitter 50 --worker-class sync --workers 1 app:app"

[[workflows.workflow]]
name = "Start Ultra Performance"
author = 47161528
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload --timeout 600 --worker-connections 500 --max-requests 100 --max-requests-jitter 10 --worker-class sync --workers 1 --worker-tmp-dir /dev/shm app:app"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
